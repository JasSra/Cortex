{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "6.0",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./tests/types"],
    "types": []
  },
  "include": [
    "playwright.config.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "frontend/**",
    "backend/**",
    "node_modules/**"
  ]
}
