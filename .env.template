# Cortex Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Ollama (Local LLM) - Default configuration
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:3b

# OpenAI (Cloud LLM) - Add your API key to enable
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# SPEECH SERVICES
# =============================================================================

# Speech-to-Text (STT) via Faster-Whisper
STT_URL=http://faster-whisper:8001

# Text-to-Speech (TTS) via Piper
TTS_URL=http://piper:8002

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Data directory for file storage (absolute path)
DATA_DIR=/app/data

# Allow scanning local filesystem folders (security consideration)
ALLOW_LOCAL_SCAN=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database connection
ConnectionStrings__DefaultConnection=Data Source=/app/data/cortex.db

# Redis connection for caching and queues
Redis__ConnectionString=redis:6379

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API URL for frontend to reach backend
NEXT_PUBLIC_API_URL=http://localhost:8080

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# ASP.NET Core environment
ASPNETCORE_ENVIRONMENT=Development

# Enable detailed logging
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# File upload limits (in bytes)
MAX_FILE_SIZE=104857600  # 100MB
MAX_FILES_PER_REQUEST=50

# Chunking configuration
MIN_CHUNK_SIZE=800
MAX_CHUNK_SIZE=1200

# Search result limits
DEFAULT_SEARCH_LIMIT=20
MAX_SEARCH_LIMIT=100

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Analytics (if you want to track usage)
# ANALYTICS_KEY=

# Monitoring (for production deployments)
# MONITORING_ENDPOINT=

# Email notifications (for system alerts)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
